{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "pnpm run build",
		"beforeDevCommand": "pnpm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "tauri-svelte",
		"version": "0.1.0"
	},
	"tauri": {
		"macOSPrivateApi": true,
		"allowlist": {
			"globalShortcut": {
				"all": true
			},
			"window": {
				"all": true
			},
			"clipboard": {
				"writeText": true
			}
		},
		"systemTray": {
			"iconPath": "icons/icon.png"
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.agavram.dev",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "An LLM chat application",
			"targets": "app"
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"decorations": false,
				"center": true,
				"visible": false,
				"transparent": true,
				"maximizable": false,
				"height": 700,
				"width": 600
			}
		]
	}
}
